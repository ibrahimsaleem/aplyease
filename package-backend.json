{
  "name": "aplyease-backend",
  "engines": {
    "node": ">=18 <20"
  },
  "version": "1.0.0",
  "type": "commonjs",
  "license": "MIT",
  "scripts": {
    "dev:server": "cross-env NODE_ENV=development tsx watch server/main-backend-only.ts",
    "build:backend": "tsc -p server/tsconfig.json && npm run copy-shared",
    "copy-shared": "node -e \"const fs=require('fs');const path=require('path');if(!fs.existsSync('dist/shared')){fs.mkdirSync('dist/shared',{recursive:true});}fs.cpSync('shared','dist/shared',{recursive:true});\"",
    "start:backend": "node dist/server/server/main-backend-only.js",
    "check": "tsc",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/memoizee": "^0.4.12",
    "bcrypt": "^6.0.0",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.39.1",
    "drizzle-zod": "^0.7.0",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "jsonwebtoken": "^9.0.2",
    "memoizee": "^0.4.17",
    "memorystore": "^1.6.7",
    "module-alias": "^2.2.3",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "ws": "^8.18.0",
    "zod": "^3.24.2",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@types/connect-pg-simple": "^7.0.3",
    "@types/express": "4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/node": "20.16.11",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/ws": "^8.5.13",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.30.4",
    "tsx": "^4.19.1",
    "typescript": "5.6.3"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  },
  "_moduleAliases": {
    "@shared": "dist/shared"
  }
}
